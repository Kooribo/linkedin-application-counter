{
  "manifest_version": 2,
  "name": "LinkedIn Application Counter",
  "version": "1.0",
  "description": "Check the real number of Linkedin Applications.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.linkedin.com/*"
  ],
  "icons": {
    "256": "icons/app-256.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["app.js"],
      "run_at": "document_idle"
    }
  ]
}
